@model List<SmartPark.Models.ParkingLot>

@{
    ViewData["Title"] = "Parking Lots";
}

<div class="container mt-5">
    <h1>Parking Lots</h1>
    <p class="text-muted">Click a parking lot to view its parking spots.</p>

    <div class="list-group mt-4">
        @foreach (var lot in Model)
        {
            <a class="list-group-item list-group-item-action"
               href="@Url.Action("ParkingSpots", "Home", new { lotId = lot.Id })">
                <strong>@lot.Location</strong> (ID: @lot.Id)
            </a>
        }
    </div>
</div>